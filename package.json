{
  "name": "iobroker.mitsubishi-local-control",
  "version": "1.0.3",
  "description": "mitsubishi-local-control",
  "author": {
    "name": "Black-Thunder",
    "email": "glwars@aol.de"
  },
  "contributors": [],
  "homepage": "https://github.com/Black-Thunder/ioBroker.mitsubishi-local-control",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "Smart Home",
    "home automation",
    "Mitsubishi",
    "airconditioning",
    "automation",
    "IoT",
    "integration"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Black-Thunder/ioBroker.mitsubishi-local-control.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "async-mutex": "^0.5.0",
    "fast-xml-parser": "^5.3.3"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/dev-server": "^0.8.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.2.2",
    "@iobroker/types": "^7.1.0",
    "@tsconfig/node20": "^20.1.8",
    "@types/node": "^25.0.3",
    "nyc": "^17.1.0",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint -c eslint.config.mjs .",
    "lint:fix": "eslint -c eslint.config.mjs . --fix",
    "translate": "translate-adapter",
    "release": "release-script",
    "dev-server": "dev-server"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/Black-Thunder/ioBroker.mitsubishi-local-control/issues"
  },
  "readmeFilename": "README.md"
}
